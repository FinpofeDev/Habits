<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Color de fondo -->
    <solid android:color="#FFFFFF" />

    <!-- Bordes redondeados -->
    <corners android:radius="12dp" />

    <!-- Borde si deseas uno visible -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Sombra leve (no real en todas las versiones, pero simula xd) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
