<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Habits" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/nord6</item>
        <item name="colorSecondary">@color/nord5</item>
    </style>

    <style name="Theme.Habits" parent="Base.Theme.Habits" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <!-- Color de fondo -->
        <item name="windowSplashScreenBackground">@color/nord0</item>
        <!-- Ícono-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <!-- Tema que se aplicará después de cerrar el splash -->
        <item name="postSplashScreenTheme">@style/Theme.Habits</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

</resources>