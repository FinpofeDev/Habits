<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/nord2"
    android:padding="20dp"
    android:orientation="vertical">

    <EditText
        android:id="@+id/eTHabit"
        android:autofillHints=""
        android:inputType=""
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/nord8"
        android:hint="@string/add_habit"
        android:textColor="@color/nord6"
        android:textAlignment="center"
        android:textColorHint="@color/nord8">

    </EditText>

    <Button
        android:id="@+id/btnAddHabit"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/create_habit"
        android:textColor="@color/nord6"
        android:backgroundTint="@color/nord0">

    </Button>
    
</LinearLayout>